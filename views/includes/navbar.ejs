<style>
  /* ---------- ENHANCED NAVBAR - SAME STRUCTURE, FULLY RESPONSIVE ---------- */
  .navbar {
    padding: 0.8rem 1.5rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(15px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    z-index: 1050;
  }

  .navbar-brand i {
    font-size: 1.8rem;
    transition: all 0.3s ease;
    color: #fe424f;
  }

  .navbar-brand:hover i {
    transform: scale(1.1);
    color: #ff6b7a !important;
  }

  /* ---------- SEARCH ---------- */
  /* ---------- SEARCH (UNIFIED SIZE) ---------- */
.search-form {
  display: flex;
  gap: 0.5rem;
  width: 100%;
  max-width: 500px;
  margin: 0 auto;
}

/* SAME HEIGHT & RADIUS */
.search-inp,
.search-btn {
  height: 42px;                /* ðŸ”‘ SAME HEIGHT */
  border-radius: 25px;         /* ðŸ”‘ SAME SHAPE */
  font-size: 15px;
}

/* INPUT */
.search-inp {
  flex: 1;
  border: 2px solid #e9ecef;
  padding: 0 1.2rem;
  background: #fff;
  transition: all 0.3s ease;
}

.search-inp:focus {
  border-color: #fe424f;
  box-shadow: 0 0 0 0.2rem rgba(254, 66, 79, 0.15);
  outline: none;
}

/* BUTTON */
.search-btn {
  padding: 0 1.4rem;           /* matches input padding visually */
  background: linear-gradient(135deg, #fe424f, #ff6b7a);
  color: #fff;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  white-space: nowrap;
  box-shadow: 0 3px 12px rgba(254, 66, 79, 0.3);
  transition: all 0.3s ease;
}

.search-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(254, 66, 79, 0.4);
}


  /* ---------- NAV LINKS ---------- */
  .nav-link {
    color: #555 !important;
    font-weight: 500;
    padding: 0.6rem 1rem !important;
    border-radius: 20px;
    transition: all 0.3s ease;
    margin: 0 0.25rem;
  }

  .nav-link:hover {
    color: #fe424f !important;
    background: rgba(254, 66, 79, 0.08);
    transform: translateY(-1px);
  }

  /* ---------- RESPONSIVE BREAKPOINTS ---------- */
  /* Tablet Landscape to Desktop */
  @media (min-width: 992px) {
    .search-form {
      gap: 0.75rem;
    }

    .navbar {
      padding: 0.8rem 2rem;
    }
  }

  /* Tablet Portrait */
  @media (max-width: 991.98px) {
    .navbar {
      padding: 1rem 1.25rem;
    }

    .search-form {
      max-width: none;
    }
  }

  /* Mobile Large */
  @media (max-width: 768px) {
    .navbar {
      padding: 0.75rem 1rem;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .navbar-collapse {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      padding: 1.5rem;
      margin-top: 0.75rem;
      border-radius: 16px;
      border: 1px solid rgba(0, 0, 0, 0.08);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    }

    @media (max-width: 768px) {
      .search-form {
        flex-direction: column;
        gap: 0.75rem;
        margin: 1rem 0;
      }

      .search-inp,
      .search-btn {
        height: 44px;
        font-size: 16px;
        border-radius: 25px;
      }

      .search-btn {
        width: 100%;
        justify-content: center;
      }
    }

    .navbar-nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    .nav-link {
      padding: 1rem 1.25rem !important;
      border-radius: 16px;
      font-size: 16px;
      text-align: center;
    }
  }

  /* Mobile Small */
  @media (max-width: 480px) {
    .navbar {
      padding: 0.75rem 0.75rem;
    }

    .navbar-brand i {
      font-size: 1.6rem;
    }

    .search-inp {
      padding: 0 1rem;
    }

    .search-btn {
      padding: 0 1.25rem;
    }
  }

  /* Scroll effect */
  .navbar.scrolled {
    padding: 0.6rem 1.5rem;
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.12);
  }

  @media (max-width: 768px) {
    .navbar.scrolled {
      padding: 0.6rem 1rem;
    }
  }

  /* Toggler improvements */
  .navbar-toggler {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .navbar-toggler:focus {
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 79, 0.25);
  }
</style>

<nav class="navbar navbar-expand-md border-bottom sticky-top" id="mainNav">
  <div class="container-fluid">
    <!-- LOGO (EXACT SAME) -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-earth-africa text-danger fs-3"></i>
    </a>

    <!-- TOGGLER (EXACT SAME) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav"
      aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- COLLAPSE (EXACT SAME) -->
    <div class="collapse navbar-collapse" id="nav">
      <!-- LEFT (EXACT SAME) -->
      <ul class="navbar-nav me-md-3">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- SEARCH (ENHANCED BUT SAME STRUCTURE) -->
      <form class="search-form" method="GET" action="/listings">
        <input name="q" class="form-control search-inp" type="search" placeholder="Search destinations" />
        <button class="search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          Search
        </button>
      </form>

      <!-- RIGHT (EXACT SAME) -->
      <ul class="navbar-nav ms-md-auto mt-3 mt-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Host</a>
        </li>

        <% if(!currUser){ %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Simple scroll effect (optional enhancement)
  window.addEventListener('scroll', () => {
    const navbar = document.getElementById('mainNav');
    if (window.scrollY > 50) {
      navbar.classList.add('scrolled');
    } else {
      navbar.classList.remove('scrolled');
    }
  });

  // Active link highlighting
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
      }
    });
  });
</script>