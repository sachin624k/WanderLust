<% layout("layouts/boilerplate") %>

<style>
  /* ================= FILTER BAR ================= */
  #filters {
    display: flex;
    gap: 1.8rem;
    overflow-x: auto;
    padding: 1rem 0;
    align-items: center;
    scrollbar-width: none;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    min-width: 72px;
    text-decoration: none;
    color: inherit;
    padding-bottom: 6px;
  }

  .filter i {
    font-size: 1.4rem;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0.35rem 0 0;
    white-space: nowrap;
  }

  .filter:hover,
  .filter.active {
    opacity: 1;
    border-bottom: 2px solid #000;
  }

  /* ================= TAX TOGGLE ================= */
  .tax-toggle {
    border: 1px solid #ddd;
    border-radius: 25px;
    padding: 0.4rem 0.9rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .tax-info {
    display: none;
  }
</style>

<!-- ================= FILTER BAR ================= -->
<div id="filters">

  <a href="/listings?category=Trending"
     class="filter <%= category === 'Trending' ? 'active' : '' %>">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>

  <a href="/listings?category=Rooms"
     class="filter <%= category === 'Rooms' ? 'active' : '' %>">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>

  <a href="/listings?category=Cities"
     class="filter <%= category === 'Cities' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Cities</p>
  </a>

  <a href="/listings?category=Castles"
     class="filter <%= category === 'Castles' ? 'active' : '' %>">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </a>

  <a href="/listings?category=Pools"
     class="filter <%= category === 'Pools' ? 'active' : '' %>">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Pools</p>
  </a>

  <a href="/listings?category=Mountains"
     class="filter <%= category === 'Mountains' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </a>

  <a href="/listings?category=Camping"
     class="filter <%= category === 'Camping' ? 'active' : '' %>">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </a>

  <a href="/listings?category=Farms"
     class="filter <%= category === 'Farms' ? 'active' : '' %>">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </a>

  <a href="/listings?category=Arctic"
     class="filter <%= category === 'Arctic' ? 'active' : '' %>">
    <i class="fa-regular fa-snowflake"></i>
    <p>Arctic</p>
  </a>

  <a href="/listings?category=Domes"
     class="filter <%= category === 'Domes' ? 'active' : '' %>">
    <i class="fa-solid fa-igloo"></i>
    <p>Domes</p>
  </a>

  <a href="/listings?category=Boats"
     class="filter <%= category === 'Boats' ? 'active' : '' %>">
    <i class="fa-solid fa-ship"></i>
    <p>Boats</p>
  </a>

  <div class="tax-toggle ms-auto">
    <div class="form-check form-switch m-0">
      <input class="form-check-input" type="checkbox" id="taxSwitch">
      <label class="form-check-label ms-2">Include GST</label>
    </div>
  </div>
</div>

<!-- ================= LISTINGS GRID ================= -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-2">
  <% if (allListings.length === 0) { %>
    <p class="text-center mt-5">No listings found for this category.</p>
  <% } %>

  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card h-100">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing image"
          >

          <div class="card-body">
            <p class="card-text mb-0">
              <strong><%= listing.title %></strong><br>
              â‚¹ <%= (listing.price || 0).toLocaleString("en-IN") %> / night
              <span class="tax-info"> + 18% GST</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  const taxSwitch = document.getElementById("taxSwitch");
  const taxInfo = document.querySelectorAll(".tax-info");

  taxSwitch.addEventListener("change", () => {
    taxInfo.forEach(el => {
      el.style.display = taxSwitch.checked ? "inline" : "none";
    });
  });
</script>
