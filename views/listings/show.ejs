<% layout("layouts/boilerplate") %>

<div class="container mt-4">                <!-- wrap everything in container -->
  <div class="row justify-content-center">  <!-- center title & card -->

    <div class="col-10 col-md-8 text-center mb-2">
      <h3><%= listing.title %></h3>
    </div>

    <div class="card col-10 col-md-8 show-card listing-card">  <!-- fix class name -->
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image"/>
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %><br/>
          &#8377; <%= (listing.price || 0).toLocaleString("en-IN") %><br/>
          <%= listing.location %><br/>
          <%= listing.country %>
        </p>
      </div>
    </div>

    <div class="col-10 col-md-8 mt-3">
      <div class="d-flex gap-2">            <!-- nicer buttons row -->
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>

    <div class="col-10 col-md-8 mb-3 mt-4">
      <hr/>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" rows="5" class="form-control" required></textarea>
        </div>
        <div class="invalid-feedback">Please add some comments for review</div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>

      <hr/>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (review of listing.reviews) { %>
          <div class="card col-12 col-md-5 ms-md-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">John Dsouza</h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %> stars</p>
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-dark btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

  </div>
</div>
